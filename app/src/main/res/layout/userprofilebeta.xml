<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/userDescription"
            android:layout_width="274dp"
            android:layout_height="114dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:text="USER DESCRIPTION"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/userType"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            app:layout_constraintHorizontal_bias="0.0" />

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="0dp"
            android:layout_height="237dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/message_style"
            android:clickable="true"
            android:contentDescription="Upload Profile Pic Here"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/holo_purple" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/message_style"
            android:padding="4dp"
            android:text="User Name"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:layout_editor_absoluteY="192dp" />

        <TextView
            android:id="@+id/userType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/message_style"
            android:padding="4dp"
            android:text="Type Of User"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userDescription"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="164dp"
                android:layout_height="44dp"
                android:text="Commend User"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="112dp" />

            <ImageButton
                android:id="@+id/commend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_sentiment_satisfied_black_24dp"
                tools:layout_editor_absoluteX="194dp"
                tools:layout_editor_absoluteY="112dp" />

            <ImageButton
                android:id="@+id/report"
                android:layout_width="52dp"
                android:layout_height="42dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_sentiment_dissatisfied_black_24dp"
                tools:layout_editor_absoluteX="194dp"
                tools:layout_editor_absoluteY="52dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="178dp"
                android:layout_height="34dp"
                android:text="Start Conversation"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <ImageButton
                android:id="@+id/chat"
                android:layout_width="51dp"
                android:layout_height="34dp"
                android:background="@null"
                app:srcCompat="@drawable/ic_chat_black_24dp"
                app:layout_constraintLeft_toRightOf="@+id/textView10"
                android:layout_marginLeft="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="170dp"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:text="Report User"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:layout_editor_absoluteY="51dp"
                app:layout_constraintRight_toLeftOf="@+id/report"
                android:layout_marginRight="8dp" />
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>