<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    android:fillViewport="true"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="42dp"
            android:layout_height="36dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_edit_black_24dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/userDescription" />

        <TextView
            android:id="@+id/userDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="USER DESCRIPTION"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profilePic" />

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="0dp"
            android:layout_height="237dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/message_style"
            android:clickable="true"
            android:contentDescription="Upload Profile Pic Here"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/holo_purple" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/newMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="8dp"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="cursive"
            android:padding="4dp"
            android:text="User Name"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/profilePic"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/userType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorPrimaryLight"
            android:padding="4dp"
            android:text="Type Of User"
            app:layout_constraintBottom_toBottomOf="@+id/profilePic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newMessage" />

        <ImageButton
            android:id="@+id/sendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="87dp"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_message_black_50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switch2" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="Message"
            app:layout_constraintLeft_toLeftOf="@+id/sendMessage"
            app:layout_constraintRight_toRightOf="@+id/sendMessage"
            app:layout_constraintTop_toBottomOf="@+id/sendMessage" />

        <TextView
            android:id="@+id/commendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="@+id/commendImageButton"
            app:layout_constraintRight_toRightOf="@+id/commendImageButton"
            app:layout_constraintTop_toBottomOf="@+id/commendImageButton" />

        <ImageButton
            android:id="@+id/commendImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            app:srcCompat="@drawable/ic_favorite_border_black_50dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/switch2"
            android:layout_marginRight="96dp"
            app:layout_constraintRight_toRightOf="parent" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="Ready To Help Others"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userDescription" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="Log out"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="97dp"
            app:layout_constraintTop_toBottomOf="@+id/switch2" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>